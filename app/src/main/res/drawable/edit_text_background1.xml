<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/focusBackgroundColor" />
            <stroke android:width="2dp" android:color="@color/focusBorderColor" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/defaultBackgroundColor1" />
            <stroke android:width="1dp" android:color="@color/defaultBorderColor" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</selector>
